        <Label x:Name="SOS1" Content="SOS Detected!" Canvas.Left="594" Canvas.Top="22" FontFamily="./Font/#Helvetica" FontSize="35" Visibility="Hidden"/>
        <Label x:Name="SOS2" Content="Click to learn&#xD;&#xA;       more" Canvas.Left="670" Canvas.Top="79" Height="43" Width="117" FontFamily="./Font/#Helvetica" MouseEnter="SOS2_MouseEnter" MouseLeave="SOS2_MouseLeave" Foreground="#FF001FFF" FontSize="15" Visibility="Hidden" MouseDown="SOS2_MouseDown"/>
        <Button x:Name="logout" Content="Logout" Canvas.Left="1445" Canvas.Top="10" Width="75" Height="34" Foreground="#FFEA1010" Click="logout_Click" FontFamily="./Font/#Helvetica"/>
        <Rectangle Fill="#FFF4F4F5" Height="443" Canvas.Left="47" Stroke="Black" Canvas.Top="188" Width="721"/>
        <Rectangle Fill="#FFF4F4F5" Height="443" Canvas.Left="1032" Stroke="Black" Canvas.Top="188" Width="474"/>
    </Canvas>
