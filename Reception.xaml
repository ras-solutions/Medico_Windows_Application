        <TextBox Height="26" Canvas.Left="229" TextWrapping="Wrap" Canvas.Top="72" Width="149"/>
        <Button Content="Search " Width="76" Canvas.Left="190" Canvas.Top="120" FontFamily="./Font/#Helvetica"/>
        <GroupBox Header="Avaliable Doctors" Height="483" Canvas.Left="1017" Canvas.Top="163" Width="503" FontFamily="./Font/#Helvetica"/>
        <GroupBox Header="Patient Details" Height="483" Canvas.Left="34" Canvas.Top="163" Width="753" FontFamily="./Font/#Helvetica"/>
        <Button Content="Assign to doctor&#xD;&#xA;          &gt;&gt;&gt;" Canvas.Left="862" Canvas.Top="334" Width="115" Height="75" Click="Button_Click" FontFamily="./Font/#Helvetica"/>
